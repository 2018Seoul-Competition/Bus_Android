<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <ImageView
             android:id="@+id/noticeHeader"
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:src="@drawable/notice_header" />

         <TextView
             android:id="@+id/noticeText"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="18dp"
             android:textColor="#000066"
             android:textSize="19sp"
             android:text="공지사항" />
     </RelativeLayout>


    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:background="@drawable/notice_backbg">

        <ImageButton
            android:id="@+id/noticeBtn"
            android:layout_width="25dp"
            android:layout_height="27dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/notice_back"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp">

        <ImageView
            android:id="@+id/noticeStory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/notice_story" />
    </RelativeLayout>

</RelativeLayout>
</layout>